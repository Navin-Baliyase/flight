<div class="container">
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Airline</th>
				<th scope="col">Category</th>
				<th scope="col">Source</th>
				<th scope="col">Destination</th>
				<th scope="col">Price</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @airplane.name if @airplane.name %></td>
				<td><%= @airplane.category if @airplane.category %></td>
				<td><%= @airplane.source if @airplane.source %></td>
				<td><%= @airplane.destination if @airplane.destination %></td>
				<td><%= @airplane.price if @airplane.price %></td>
			</tr>
		</tbody>
	</table>

  <p class=" text-danger py-5"><strong>Please fill the below information to continue booking.</strong> </p>
  <hr>
	<div class="login-form">
		<%= form_tag(book_path, method: "get") do %>
		<%= hidden_field_tag "booking[airplane_id]", @airplane.id %>
		<div class="sign-in-htm">
			<div class="group">
				<label for="name" class="label">Your Name</label>
				<%= text_field_tag "booking[name]","",{class: "input"} %>
			</div>
			<div class="group">
				<label for="age" class="label">Age</label>
				<%= text_field_tag "booking[age]","",{class: "input"} %>
			</div>
			<div class="group">
				<label for="passport_id" class="label">Passport/ID</label>
				<%= text_field_tag "booking[passport_id]","",{class: "input"} %>
			</div>
			<div class="group">
				<%= submit_tag "Submit", {class: "button"} %>
			</div>
			<div class="hr"></div>
		</div>
		<%end%>	
	</div>
</div>