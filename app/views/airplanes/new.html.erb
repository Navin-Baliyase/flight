<div class="container">
	<div class="login-form">
		<%= form_tag(airplanes_path, method: "new") do %>
		<div class="sign-in-htm">
			<div class="group">
				<label for="airplane" class="label">Name</label>
				<%= text_field_tag "airplane[name]","",{class: "input"} %>
			</div>
			<div class="group">
				<label for="airplane" class="label">Category</label>
				<%= text_field_tag "airplane[category]","",{class: "input"} %>
			</div>
			<div class="group">
				<label for="pass" class="label">Seats</label>
				<%= text_field_tag "airplane[seats]","",{class: "input"} %>
			</div>
			<div class="group">
				<label for="pass" class="label">Rows</label>
				<%= text_field_tag "airplane[rows]","",{class: "input"} %>
			</div>
			<div class="group">
				<%= submit_tag "Create", {class: "button"} %>
			</div>
			<div class="hr"></div>
		</div>
		<%end%>	
	</div>
</div>