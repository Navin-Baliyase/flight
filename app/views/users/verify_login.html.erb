<h2>Member Log in</h2>
<%= form_tag(user_path, method: "get") do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag "user[email]" %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag "user[password]" %>
  </p>
  <p class="button"><%= submit_tag "Log in", {:class => "btn btn-info"} %></p>
<% end %>